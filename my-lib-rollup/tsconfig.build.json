{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "src/",
      "paths": {
        "common/*": [
          "common/*"
        ],
        "components/*": [
          "components/*"
        ],
        "hooks/*": [
          "hooks/*"
        ],
        "utils/*": [
          "utils/*"
        ],
        "styles/*": [
          "styles/*"
        ]
      }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
    "src/**/__tests__/*.test.tsx",
      "src/**/*.test.tsx",
      "src/**/*.stories.tsx"
    ],
  }
  